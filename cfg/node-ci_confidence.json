{
    "pack": {},
    "servers": [
        {
            "port": 8080,
            "options": {
                "labels": [
                    "api",
                    "http"
                ],
                "timeout": {
                    "server": 60000
                },
                "maxSockets": 300,
                "load": {
                    "maxHeapUsedBytes": 1073741824,
                    "maxRssBytes": 1610612736,
                    "sampleInterval": 1000,
                    "maxEventLoopDelay": 5000
                }
            }
        },
        {
            "port": 8999,
            "options": {
                "labels": [
                    "admin"
                ],
                "timeout": {
                    "server": 60000
                }
            }
        }
    ],
    "plugins": {
        "good": {
            "subscribers": {
                "console": ["request", "ops", "log", "error"],
                "/app/node-ci/log/request.log": ["request"],
                "/app/node-ci/log/ops.log": ["ops"],
                "/app/node-ci/log/log.log": ["log"],
                "/app/node-ci/log/error.log": ["error"]
            },
            "extendedRequests": true
        },
        "lout": {},
        "notify-email": {
           "host": "localhost",
           "port": 25
        },
    }
}
